<html lang="zh">
<head>
    <meta http-equiv="content-type" content="text/html;charset=utf-8">
    <title>网站信息记录</title>
    <script type="text/javascript" src="/static/js/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="/static/js/common.js"></script>
    <script type="text/javascript" src="/static/js/main.js"></script>
    <script type="text/javascript" src="/static/js/other.js"></script>
	<link rel="stylesheet" href="/static/css/iconfont.css">
    <style>
        html,body,div,span,p,a,form,input,select,button,table,tbody,tr,th,td,h1,h2,h3,h4{margin: 0;padding: 0;}
        body{background: #000;}
        .main{height:94%;background: #fff;margin-top:2%;margin-left:30px;margin-right:30px;overflow: hidden;overflow-x: scroll;overflow-y: scroll;}
        h1{text-align: center;height: 50px;line-height: 50px;}
        .web_list{margin-bottom: 10px;}
        .web_list table{margin-left:10px;margin-right:10px;margin-top:10px;background: #CCE8CF;border-color: #eee;text-align: center;}
        .web_list table th{min-width: 50px;height: 30px;line-height: 30px;font-size: 14px;white-space: nowrap;padding: 0 5px;}
        .web_list table td{line-height: 24px;}
        .web_list table .do_actions{white-space: nowrap;padding-left: 5px;padding-right: 5px;}
        .web_list table tr td input{text-align: center;height: 38px;}
        .pages{margin: 20px auto;}
        .box_notice{position: absolute;left:0;top: 0;width: 100%;height: 100%;background: rgba(0,0,0,0.5);}
        #main_box{position:relative;width:30%;height:270px;margin: 10% auto;background: #ffffff;}
        #main_box textarea{display: block;height:150px;width:60%;margin:auto;}
        .sub{display: block;width: 100%;text-align: center;margin:10px auto;}
		#main_box .box_head{background:#ccc;height:24px;line-height:24px;width:100%;}
		.icon{display:block;padding:0 10px;}
		.icon-memory{float:left;}
		.icon-close{float:right;font-size:18px;}
		form{margin:30px auto;}
		.sub a{display:block;text-align:center;float:left;}
		#ad_notice{margin-left:40%;width:10%;}
		#rest_notice{margin-left:10%;}
    </style>
</head>
<body>
    <div class="main">
        <div class="tit">
            <h1>网站列表</h1>
            <p class="action">
                <a id="ad" href="javascript:;">添加</a> |
                <a id="server" show="off" href="javascript:;">显示服务器信息</a> |
                <a id="seo" show="off" href="javascript:;">显示seo信息</a>
            </p>
        </div>
        <div class="web_list">
            <table border="1" cellpadding="0" cellspacing="0">
            </table>
        </div>
        <div class="pages">

        </div>
    </div>

    <div class="box_notice">
        <div id="main_box">
			<div class="box_head"><i class="icon iconfont icon-memory">添加备忘录</i><i class="icon iconfont icon-close"></i></div>
			<form>
				<input type="hidden" name="domain_id" value="">
				<textarea name="notice" rows="5"></textarea>
				<div class="sub">
					<a id="ad_notice" href="javascript:;">添加</a>
					<a id="rest_notice" href="javascript:;">重置</a>
				</div>
			</form>
        </div>
    </div>
</body>
</html>